{% set ctaSectionId = ctaSectionId | default('contact') %}
{% set ctaHeadingId = ctaHeadingId | default('contact-intro') %}
<section id="{{ ctaSectionId }}" class="section" aria-labelledby="{{ ctaHeadingId }}">
  <div class="container">
    <div class="two-col">
      <div class="stack">
        <span class="eyebrow">Say Hey</span>
        <h2 id="{{ ctaHeadingId }}">Ready for a Better Website?</h2>
        <p>Your website should do more than exist &mdash; it should bring you business. Let's design a custom, high-performing site that looks sharp, loads fast, and converts.</p>
      </div>

      <form class="stack" id="contact-form" action="#" method="post">
        <div class="form-grid">
          <div>
            <label for="first-name">First name</label>
            <input type="text" id="first-name" name="first-name" placeholder="Jane" required>
          </div>
          <div>
            <label for="last-name">Last name</label>
            <input type="text" id="last-name" name="last-name" placeholder="Doe" required>
          </div>
        </div>

        <div class="form-grid">
          <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="you@example.com" required>
          </div>
          <div>
            <label for="phone">Phone number</label>
            <input type="tel" id="phone" name="phone" placeholder="(555) 123-4567">
          </div>
        </div>

        <div class="form-grid">
          <div>
            <label for="company">Company name</label>
            <input type="text" id="company" name="company" placeholder="Your company">
          </div>
          <div>
            <label for="website">Website URL</label>
            <input type="url" id="website" name="website" placeholder="https://yourdomain.com">
          </div>
        </div>

        <div class="cluster">
          <button class="btn" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</section>
